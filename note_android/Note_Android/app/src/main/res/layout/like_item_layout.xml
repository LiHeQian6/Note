<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.xuexiang.xui.widget.imageview.RadiusImageView
        android:id="@+id/like_head"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@drawable/head_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="1dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/like_head"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/like_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一字见心"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/less_black"
            android:layout_marginStart="@dimen/dp_5" />

        <TextView
            android:id="@+id/like_produce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一字见心"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_8"
            android:textColor="@color/less_black"
            android:layout_marginStart="@dimen/dp_5" />
    </LinearLayout>

    <Button
        android:id="@+id/like_this_writer"
        style="@style/RoundButton.Auto"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_25"
        android:text="相互关注"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/radio_button_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>